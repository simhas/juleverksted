<!DOCTYPE html>
<html ng-app="myApp" style="background-color: #a42121">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Et frontend Juleeventyr</title>
    @Styles.Render("~/Content/reset.css")
    <link rel='stylesheet prefetch' href='https://fonts.googleapis.com/css?family=Dosis:400,300,500,800'>
    @Styles.Render("~/Content/style.css")
    @Styles.Render("~/Content/bootstrap.css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <script src="https://cdnjs.cloudflare.com/ajax/libs/require.js/2.3.2/require.js"></script>
</head>
<body style="background-color: #a42121">
    <div class="background">
        <canvas id="snow" class="snow"></canvas>
        <div class="info-container">
            @RenderBody()
        </div>
    </div>

    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="../../Scripts/index.js"></script>
</body>
</html>
